<h1 class="text-center"><%= @cocktail.name %></h1>
<div class="container">
  <div class="row">
  <div class="col-sm-6 col-md-6 col-md-offset-3">
    <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.input :description %>
      <%= f.association :ingredient, placeholder: 'choose in the list' %>
      <%= f.submit "add an ingredient", class: 'btn btn-success' %>
    <% end %>
    <h2>Actual list of doses</h2>
    <ul>
      <% Dose.where(cocktail_id: @cocktail.id).each do |dose| %>
        <li><%= "#{dose.description} of #{dose.ingredient.name}" %></li>
      <% end %>
    </ul>
  </div>
</div>
